<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Department Form</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
  

    .card {
        border-radius: 20px;
        backdrop-filter: blur(10px);
        background: rgba(255, 255, 255, 0.25);
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
        border: 1px solid rgba(255, 255, 255, 0.3);
    }

    .header {
        background: linear-gradient(135deg, #0093E9, #80D0C7);
        border-radius: 20px 20px 0 0;
        color: #fff;
        padding: 30px;
        text-align: center;
        font-weight: 600;
        letter-spacing: 1px;
    }

    .form-control {
        border-radius: 12px;
        padding: 10px 14px;
        border: 1px solid #d0d7df;
        transition: 0.3s ease;
    }

    .form-control:focus {
        border-color: #0093E9;
        box-shadow: 0 0 0 2px rgba(0,147,233,0.2);
    }

    textarea.form-control {
        resize: none;
    }

    .btn-custom {
        background: linear-gradient(135deg, #0093E9, #80D0C7);
        color: white;
        border-radius: 14px;
        padding: 10px;
        font-size: 16px;
        transition: 0.3s ease;
        border: none;
    }

    .btn-custom:hover {
        background: linear-gradient(135deg, #007ac1, #64b8ab);
        transform: translateY(-2px);
    }

    .btn-outline-primary,
    .btn-outline-secondary {
        border-radius: 14px;
        padding: 8px 20px;
        font-weight: 500;
        border-width: 2px;
    }

    .btn-outline-primary:hover {
        background: #0093E9;
        color: #fff;
    }

    .btn-outline-secondary:hover {
        background: #80D0C7;
        color: #fff;
    }
</style>

</head>
<body>
  <div class="container mt-4">
    <div class="card mx-auto" style="max-width: 650px;">
      <div class="header">
        <h3 class="m-0">Create Department</h3>
        <small>Fill department details</small>
      </div>
      <div class="card-body">
        <form id="departmentForm">
          <!-- Department Name -->
          <div class="mb-3">
            <label for="dept_name" class="form-label">Department Name <span class="text-danger">*</span></label>
            <input type="text" class="form-control" id="dept_name" placeholder="Enter department name" required>
          </div>
          <div class="row">
            <!-- Company -->
            <div class="col-md-6 mb-3">
              <label for="company_id" class="form-label">Select Company <span class="text-danger">*</span></label>
              <input type="text" class="form-control" id="company_id">
            </div>
            <!-- Branch -->
            <div class="col-md-6 mb-3">
              <label for="branch_id" class="form-label">Select Branch <span class="text-danger">*</span></label>
              <input type="text" class="form-control" id="branch_id">
            </div>
          </div>
          <!-- Manager -->
          <div class="mb-3">
            <label for="manager_id" class="form-label">Manager <span class="text-danger">*</span></label>
            <input type="text" class="form-control" id="manager_id">
          </div>
          <!-- Description -->
          <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea class="form-control" id="description" rows="3" placeholder="Enter description"></textarea>
          </div>
          <div id="mdg"></div>
          <!-- SAVE -->
          <button type="submit" class="btn btn-custom w-100">Create Department</button>
          <!-- Buttons -->
          <div class="col-12 mt-3 d-flex justify-content-center gap-3">
            <button type="reset" class="btn btn-outline-primary px-4">
              Reset
            </button>
            <button type="button" class="btn btn-outline-secondary px-4" onclick="window.history.back()">
              Close
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
  <script>
    const form = document.getElementById('departmentForm');
    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      const departmentobj = {
        name: document.getElementById('dept_name').value,
        company_id: document.getElementById('company_id').value,
        branch_id: document.getElementById('branch_id').value,
        manager: document.getElementById('manager_id').value,
        description: document.getElementById('description').value
      };

      const data = await fetch("http://localhost:3000/departmentdataapi", {
        method: "POST",
        headers: {
          "content-type": "application/json",
        },
        body: JSON.stringify(departmentobj),
      });
      // console.log(data);
      const response = await data.json()
      // console.log(response);
      if (data.ok) {
        let mdg = document.getElementById("mdg");
        mdg.innerHTML = `<div class="alert alert-success">Data Sucsesfully Stored</div>`
        form.reset();
        setInterval(() => {
          mdg.innerHTML = "";
        }, 2000);
      }
      else {
        mdg.innerHTML = `<div class="alert alert-danger">Data Can't Stored</div>`;
      }
    });
  </script>
</body>
</html>