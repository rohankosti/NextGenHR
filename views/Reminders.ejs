<%- include('Layout/header'); %>
<style>
  .reminder-list .list-group-item {
      display: flex;
      align-items: center;
      justify-content: space-between;
    }

    .btn-add {
      background: #007bff;
      color: #fff;
      border: none;
      border-radius: 6px;
    }

    .btn-add:hover {
      background: #0056b3;
    }

    .btn-edit,
    .btn-delete {
      border: none;
      background: none;
      color: #007bff;
      margin-left: 8px;
    }

    .btn-edit:hover {
      color: #0056b3;
    }

    .btn-delete {
      color: #dc3545;
    }

    .btn-delete:hover {
      color: #a71d2a;
    }

</style>
<div class="main-content">
    <div class="topbar rounded-4 mb-4 d-flex justify-content-between align-items-center shadow-sm px-3">
      <h5>Reminders</h5>
      <div class="dropdown">
        <button class="btn btn-light dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
          <i class="bi bi-person-circle"></i> Admin
        </button>
        <ul class="dropdown-menu dropdown-menu-end">
          <li><a class="dropdown-item" href="#">Profile</a></li>
          <li><a class="dropdown-item" href="#">Settings</a></li>
          <li>
            <hr class="dropdown-divider">
          </li>
          <li><a class="dropdown-item" href="/Login">Logout</a></li>
        </ul>
      </div>
    </div>
    <div class="container-fluid mt-4">
      <div class="card p-4">
        <h6>Reminders</h6>
        <ul class="list-group reminder-list mt-3">
          <li class="list-group-item">Payroll processing due <span><button class="btn-edit"><i
                  class="bi bi-pencil"></i></button><button class="btn-delete"><i
                  class="bi bi-trash"></i></button></span></li>
          <li class="list-group-item">Approve 2 leave requests <span><button class="btn-edit"><i
                  class="bi bi-pencil"></i></button><button class="btn-delete"><i
                  class="bi bi-trash"></i></button></span></li>
          <li class="list-group-item">Performance review next week <span><button class="btn-edit"><i
                  class="bi bi-pencil"></i></button><button class="btn-delete"><i
                  class="bi bi-trash"></i></button></span></li>
        </ul>
        <button class="btn btn-add mt-3"><i class="bi bi-plus"></i> Add Reminder</button>
      </div>
    </div>
  </div>


