    <div class="container-fluid mt-4">
      <div class="card p-4">
        <h6>Leave Requests</h6>

        <!-- UPDATED TABLE WITH ALL 7 FIELDS -->
        <table class="table table-leaves mt-3">
          <thead>
            <tr>
              <th>ID</th>
              <th>Employee</th>
              <th>Leave Type</th>
              <th>From</th>
              <th>To</th>
              <th>Reason</th>
              <th>Approved By</th>
              <th>Status</th>
              <th colspan="2" class="text-center">Actions</th>
            </tr>
          </thead>
          <tbody id="leavereauest"></tbody>

        </table>

      </div>
