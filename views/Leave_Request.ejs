  </div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

  <script>

    addEventListener("DOMContentLoaded", async (e) => {
      try {
        const leavereauest = document.getElementById("leavereauest")
        const response = await fetch("http://localhost:3000/getleaverequest");
        const data = await response.json();
        data.forEach((e, index) => {
          // console.log(e);

          leavereauest.innerHTML += `
              <tr>
                <td>${index + 1}</td>
                <td>${e.employee_id}</td>
                <td>${e.leave_type_id}</td>
                <td>${e.from_date}</td>
                <td>${e.to_date}</td>
                <td>${e.reason}</td>
                <td>${e.approved_by}</td>
                <td id="statu">${e.status}</td>
              <td><button class="btn btn-approve btn-sm bg-primary aproveApplicationBtn" data-id="${e._id}">Approve</button></td>
                <td><button class="btn btn-reject btn-sm bg-danger rejectApplicationBtn" data-id="${e._id}">Reject</button></td>
           </tr>`
        });
        const aproveApplicationBtn = document.querySelectorAll(".aproveApplicationBtn");
        // console.log(aproveApplicationBtn);
        aproveApplicationBtn.forEach(btn => {
          //  console.log(btn);
          btn.addEventListener("click", async (e) => {
            e.preventDefault()
            const btnattribute = btn.getAttribute("data-id");
            // console.log(btnattribute);

            const idobj = { id: btnattribute }
            // console.log(idobj);

            const singlefetch = await fetch("http://localhost:3000/singleleaverequest", {
              method: "POST",
              headers: {
                "content-type": "application/json"
              },
              body: JSON.stringify(idobj)
            })
            const data = await singlefetch.json()
            // console.log(data);
            const row = btn.closest('tr');
            // console.log(row);
            const statu = row.querySelector("#statu");
            // console.log(statu);
            statu.textContent = "Approve";

            const updateddata = {
              id: btnattribute,
              status: statu.textContent,
            }
            //  console.log(updateddata,"updated");

            //update API
            const upfetch = await fetch("http://localhost:3000/updatedleaverequest", {
              method: "PUT",
              headers: {
                "content-type": "application/json"
              },
              body: JSON.stringify(updateddata)
            });
            // console.log(upfetch);
            const updata = await upfetch.json()
            // console.log(updata);
            if (upfetch.ok) {
              alert(`${updata.msg}`)
              // location.reload()
            }
            else {
              alert(`${updata.msg1}`)
            }
          });
        });


        //delate API 
        const rejectApplicationBtn = document.querySelectorAll(".rejectApplicationBtn");

        rejectApplicationBtn.forEach(rej => {
          //  console.log(rej);
          rej.addEventListener("click", async (e) => {
            e.preventDefault()
            const rejbtn = rej.getAttribute("data-id");
            // console.log(rejbtn);
            const confirmation = confirm("You Want to Delate User Leave Request ")
            if (confirmation === true) {
              alert(`Leave Request Delate Sucsessfully`);
              //  window.location.reload()
            }
            else {
              alert(`Leave Request Can't be Delate`);
              return;
            }
            const rejobj = { id: rejbtn }
            // console.log(rejobj);

            const rejfetch = await fetch("http://localhost:3000/delateleaverequest", {
              method: "DELETE",
              headers: {
                "content-type": "application/json"
              },
              body: JSON.stringify(rejobj)
            })
            console.log(rejfetch);

            const rejdata = await rejfetch.json()
            console.log(rejdata);

            if (rejfetch.ok) {
              alert("Leave Request Delate Succsesfully")
              window.location.reload()
            }
            else {
              alert(`${rejdata.msg}`);
              // alert(`Leave Requset can't Rejected`);
            }

          });
        });

      }

      catch (error) {
        console.error("Eroor in your Side", error);
      }
    })

  </script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
