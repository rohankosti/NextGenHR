<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>NextGenHR - Reporting Manager</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background: linear-gradient(120deg, #007bff 60%, #6c757d 100%);
      min-height: 100vh;
      display: flex;
      justify-content: center;
      align-items: center;
      font-family: 'Poppins', sans-serif;
    }

    .form-box {
      background: #fff;
      border-radius: 16px;
      box-shadow: 0 4px 32px rgba(0, 0, 0, 0.08);
      padding: 2.5rem 2rem;
      width: 100%;
      max-width: 600px;
      animation: fadeIn 1s;
    }

    @keyframes fadeIn {
      from {
        opacity: 0;
        transform: translateY(40px);
      }
      to {
        opacity: 1;
        transform: none;
      }
    }

    h2 {
      color: #007bff;
      text-align: center;
      font-weight: 700;
      margin-bottom: 2rem;
    }

    .form-label {
      font-weight: 500;
    }

    .form-control,
    .form-select {
      border-radius: 8px;
      transition: 0.3s;
    }

    .form-control:focus,
    .form-select:focus {
      border-color: #007bff;
      box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, .15);
    }

    .btn-primary {
      background: #007bff;
      border: none;
      border-radius: 8px;
      font-weight: 600;
      transition: background 0.2s, transform 0.2s;
    }

    .btn-primary:hover {
      background: #0056b3;
      transform: translateY(-2px);
    }

    .small-text {
      font-size: 0.85rem;
      color: #6c757d;
      margin-top: -10px;
      margin-bottom: 10px;
      display: block;
      text-align: left;
    }

    .row .col-md-6 {
      margin-bottom: 15px;
    }
  </style>
</head>

<body>
  <div class="form-box">
    <h2>Create User</h2>
    <form id="userForm">
      <!-- Name -->
      <div class="mb-3">
        <label for="name" class="form-label">Name <span class="text-danger">*</span></label>
        <input type="text" class="form-control" id="name" placeholder="Enter full name" required>
        <!-- <span class="small-text">Fields marked * are mandatory</span> -->
      </div>

      <!-- Email -->
      <div class="mb-3">
        <label for="email" class="form-label">Email <span class="text-danger">*</span></label>
        <input type="email" class="form-control" id="email" placeholder="Enter email address" required>
      </div>

      <div class="row">
        <!-- Role -->
        <div class="col-md-6">
          <label for="role" class="form-label">Role <span class="text-danger">*</span></label>
          <select class="form-select" id="role" required>
            <option value="employee">Employee</option>
            <option value="manager">Manager</option>
            <option value="admin">Admin</option>
          </select>
        </div>

        <!-- Reporting Manager -->
        <div class="col-md-6">
          <label for="reporting_manager" class="form-label">Reporting Manager</label>
          <select class="form-select" id="reporting_manager">
            <option value="">-- Select Manager --</option>
            <option value="Mitesh Prajapti">Mitesh Prajapti</option>
            <option value="Indu Patel">Indu Patel</option>
          </select>
        </div>
      </div>

      <button type="submit" class="btn btn-primary w-100 mt-3">Create User</button>
    </form>

    <div id="message"></div>
  </div>

  <script>
    const form = document.getElementById('userForm');
    form.addEventListener('submit',async (e) => 
   {
        e.preventDefault();
        const reportobj = {
          name: document.getElementById('name').value,
          email: document.getElementById('email').value,
          role: document.getElementById('role').value,
          reporting_manager: document.getElementById('reporting_manager').value
        };
          const data = await fetch ("http://localhost:3000/reportingmanagerapi",{
          method:"POST",
          headers:{
            "Content-Type":"application/json",
          },  
          body: JSON.stringify(reportobj) 
        });

        const response = await data.json();
        console.log(response);
        
        if (data.ok) {
          let message = document.getElementById('message');
          message.innerHTML = `<div class="alert alert-success mt-3" role="alert">
            ${response.msg}</div>`;
          form.reset();
        } else {
         message.innerHTML = `<div class="alert alert-danger mt-3" role="alert">
            ${response.msg}</div>`; 
        }
   });
  </script>
</body>

</html>
