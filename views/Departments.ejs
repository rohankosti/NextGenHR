    <div class="container-fluid mt-4">
      <div class="card p-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
          <h6>Department List</h6>
          <button class="btn btn-add btn-sm"><i class="bi bi-plus"></i> Add Department</button>
