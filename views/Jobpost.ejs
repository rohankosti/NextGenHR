<%- include('Partials/header') %>

<style>
  /* ===== BODY & LAYOUT ===== */
  body {
    background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
    min-height: 100vh;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
    color: #2c3e50;
  }

  section {
    padding: 3rem 0;
  }

  .container {
    max-width: 900px;
  }

  /* ===== SECTION TITLE ===== */
  .section-title {
    font-size: 32px;
    font-weight: 700;
    margin-bottom: 2.5rem;
    color: #2c3e50;
    position: relative;
    display: inline-block;
    width: 100%;
    animation: fadeIn 0.6s ease-in-out;
  }

  .section-title::after {
    content: '';
    position: absolute;
    bottom: -12px;
    left: 50%;
    transform: translateX(-50%);
    width: 80px;
    height: 4px;
    background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
    border-radius: 2px;
  }

  .section-title i {
    margin-right: 12px;
    color: #667eea;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(-10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* ===== FORM CARD ===== */
  .form-card {
    background: rgba(255, 255, 255, 0.95);
    border: none;
    border-radius: 16px;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.12);
    padding: 2.5rem;
    animation: slideUp 0.6s ease-in-out 0.2s both;
  }

  @keyframes slideUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* ===== FORM LABELS ===== */
  .form-label {
    font-weight: 600;
    color: #2c3e50;
    font-size: 14px;
    margin-bottom: 0.7rem;
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .form-label::before {
    content: '';
    width: 3px;
    height: 16px;
    background: linear-gradient(180deg, #667eea 0%, #764ba2 100%);
    border-radius: 1.5px;
  }

  .form-label i {
    color: #667eea;
    font-size: 16px;
    flex-shrink: 0;
  }

  /* ===== FORM CONTROLS ===== */
  .form-control,
  .form-select {
    border: 1.5px solid rgba(0, 0, 0, 0.08);
    border-radius: 10px;
    padding: 0.85rem 1rem;
    font-size: 14px;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    background: rgba(255, 255, 255, 0.5);
    color: #2c3e50;
  }

  .form-control::placeholder {
    color: #adb5bd;
    font-size: 13px;
  }

  .form-control:focus,
  .form-select:focus {
    border-color: #667eea;
    box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.15);
    background: #fff;
    color: #2c3e50;
  }

  .form-control:hover,
  .form-select:hover {
    border-color: rgba(102, 126, 234, 0.3);
  }

  /* ===== TEXTAREA SPECIFIC ===== */
  textarea.form-control {
    resize: vertical;
    min-height: 120px;
    font-family: 'Courier New', monospace;
  }

  textarea.form-control::placeholder {
    color: #adb5bd;
  }

  /* ===== FORM GROUP ===== */
  .form-group {
    margin-bottom: 1.8rem;
    position: relative;
  }

  .form-group:last-of-type {
    margin-bottom: 2rem;
  }

  /* ===== BUTTONS ===== */
  .btn-submit-job {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    border: none;
    border-radius: 10px;
    padding: 0.95rem 2.5rem;
    font-weight: 600;
    font-size: 15px;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    box-shadow: 0 4px 15px rgba(102, 126, 234, 0.2);
  }

  .btn-submit-job:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 25px rgba(102, 126, 234, 0.35);
    color: white;
  }

  .btn-submit-job:active {
    transform: translateY(-1px);
  }

  .btn-submit-job i {
    font-size: 18px;
  }

  /* ===== ALERT STYLING ===== */
  .alert {
    border: none;
    border-radius: 10px;
    padding: 1.2rem 1.5rem;
    font-weight: 500;
    margin-top: 1.5rem;
    animation: slideDown 0.4s ease;
    display: flex;
    align-items: center;
    gap: 10px;
  }

  @keyframes slideDown {
    from {
      opacity: 0;
      transform: translateY(-10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .alert-success {
    background: linear-gradient(135deg, rgba(40, 167, 69, 0.1) 0%, rgba(32, 201, 151, 0.1) 100%);
    color: #155724;
    border-left: 4px solid #28a745;
  }

  .alert-success i {
    color: #28a745;
    font-size: 18px;
    flex-shrink: 0;
  }

  .alert-danger {
    background: linear-gradient(135deg, rgba(220, 53, 69, 0.1) 0%, rgba(231, 76, 60, 0.1) 100%);
    color: #721c24;
    border-left: 4px solid #dc3545;
  }

  .alert-danger i {
    color: #dc3545;
    font-size: 18px;
    flex-shrink: 0;
  }

  /* ===== HELPER TEXT ===== */
  .form-text {
    font-size: 12px;
    color: #6c757d;
    margin-top: 0.4rem;
  }

  /* ===== ROW SPACING ===== */
  .row {
    gap: 0;
  }

  /* ===== RESPONSIVE ===== */
  @media (max-width: 768px) {
    section {
      padding: 2rem 0;
    }

    .form-card {
      padding: 1.5rem;
      margin: 0 1rem;
    }

    .section-title {
      font-size: 24px;
      margin-bottom: 2rem;
    }

    .section-title::after {
      width: 60px;
    }

    .form-label {
      font-size: 13px;
    }

    .btn-submit-job {
      padding: 0.85rem 2rem;
      font-size: 14px;
    }
  }

  @media (max-width: 480px) {
    section {
      padding: 1.5rem 0;
    }

    .form-card {
      padding: 1.25rem;
      margin: 0 0.5rem;
    }

    .section-title {
      font-size: 20px;
      margin-bottom: 1.5rem;
    }

    .form-label {
      font-size: 12px;
    }
  }

  /* ===== PRINT STYLES ===== */
  @media print {
    body {
      background: white;
    }

    .btn-submit-job {
      display: none;
    }
  }
</style>

  <!-- Apply Section (Job Vacancy Form) -->
  <section class="py-5">
    <div class="container">
      <h2 class="section-title text-center">
        <i class="bi bi-briefcase-fill"></i> Apply for Job Vacancy
      </h2>
      <div class="row justify-content-center">
        <div class="col-md-8">
          <div class="form-card">
            <form id="jobVacancyForm" action="/storeJobVacancy" method="POST">
              
              <div class="form-group">
                <label for="name" class="form-label">
                  <i class="bi bi-person-fill"></i> Full Name
                </label>
                <input type="text" class="form-control" id="name" name="name" placeholder="Enter your full name" required>
              </div>

              <div class="form-group">
                <label for="email" class="form-label">
                  <i class="bi bi-envelope-fill"></i> Email Address
                </label>
                <input type="email" class="form-control" id="email" name="email" placeholder="your.email@example.com" required>
              </div>

              <div class="form-group">
                <label for="position" class="form-label">
                  <i class="bi bi-briefcase-fill"></i> Position Applied For
                </label>
                <input type="text" class="form-control" id="position" name="position" placeholder="e.g. Software Developer, HR Manager" required>
              </div>

              <div class="form-group">
                <label for="resume" class="form-label">
                  <i class="bi bi-file-earmark-text-fill"></i> Resume / CV
                </label>
                <textarea class="form-control" id="resume" name="resume" placeholder="Paste your resume or CV here..." required></textarea>
                <small class="form-text">Share your experience, skills, and qualifications</small>
              </div>

              <button type="submit" class="btn-submit-job">
                <i class="bi bi-send-fill"></i> Submit Application
              </button>

              <div id="responseMsg" class="mt-3"></div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </section>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>

    let form = document.getElementById('jobVacancyForm');
    // console.log(form);

    form.addEventListener("submit", async (e) => {
      e.preventDefault();
      let formdata =
      {
        name: document.getElementById('name').value,
        email: document.getElementById('email').value,
        position: document.getElementById('position').value,
        resume: document.getElementById('resume').value,
      };
      try {
        //API for storing job vacancy form data in Mongodb database
        const data_fetch = await fetch("http://localhost:3000/storeJobVacancy",
          {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json'
            },
            body: JSON.stringify(formdata) //Because HTTP protocol text format use karta hai â€” binary ya JS object directly send nahi hota.Browser request body ko string me hi bhej sakta hai.
          });

        let json = await data_fetch.json()

        if (data_fetch.ok) {
          console.log(data_fetch, 'fetch');
          console.log(json, 'json');
          let responseMsg = document.getElementById('responseMsg');
          responseMsg.innerHTML = `<div class="alert alert-success"><i class="bi bi-check-circle-fill"></i> <span>${json.message}</span></div>`;
          form.reset();
          
          // Hide success message after 4 seconds
          setTimeout(() => {
            responseMsg.innerHTML = '';
          }, 4000);
        }

        else {
          let responseMsg = document.getElementById('responseMsg');
          responseMsg.innerHTML = `<div class="alert alert-danger"><i class="bi bi-exclamation-circle-fill"></i> <span>Error: Data Can't be Stored</span></div>`;
        }
      }
      catch (error) {
        console.error(error);
        let responseMsg = document.getElementById('responseMsg');
        responseMsg.innerHTML = `<div class="alert alert-danger"><i class="bi bi-exclamation-circle-fill"></i> <span>An error occurred. Please try again.</span></div>`;
      }
    });

  </script>
