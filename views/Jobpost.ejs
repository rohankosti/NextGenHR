<%- include('Partials/header') %>
  <!-- Apply Section (Job Vacancy Form) -->
  <section class="py-5">
    <div class="container">
      <h2 class="section-title text-center">Apply for Job Vacancy</h2>
      <div class="row justify-content-center">
        <div class="col-md-8">
          <form id="jobVacancyForm" action="/storeJobVacancy" method="POST">
            <div class="mb-3">
              <label for="name" class="form-label">Full Name</label>
              <input type="text" class="form-control" id="name" name="name" required>
            </div>
            <div class="mb-3">
              <label for="email" class="form-label">Email address</label>
              <input type="email" class="form-control" id="email" name="email" required>
            </div>
            <div class="mb-3">
              <label for="position" class="form-label">Position Applied For</label>
              <input type="text" class="form-control" id="position" name="position">
            </div>
            <div class="mb-3">
              <label for="resume" class="form-label">Resume (Paste text)</label>
              <textarea class="form-control" id="resume" name="resume" rows="4" required></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Submit Application</button>
          </form>
          <div id="responseMsg" class="mt-3"></div>
        </div>
      </div>
    </div>
  </section>



  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>

    let form = document.getElementById('jobVacancyForm');
    // console.log(form);

    form.addEventListener("submit", async (e) => {
      e.preventDefault();
      let formdata =
      {
        name: document.getElementById('name').value,
        email: document.getElementById('email').value,
        position: document.getElementById('position').value,
        resume: document.getElementById('resume').value,
      };
      try {
        //API for storing job vacancy form data in Mongodb database
        const data_fetch = await fetch("http://localhost:3000/storeJobVacancy",
          {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json'
            },
            body: JSON.stringify(formdata) //Because HTTP protocol text format use karta hai â€” binary ya JS object directly send nahi hota.Browser request body ko string me hi bhej sakta hai.
          });

        let json = await data_fetch.json()

        if (data_fetch.ok) {
          console.log(data_fetch, 'fetch');
          console.log(json, 'json');
          let responseMsg = document.getElementById('responseMsg');
          responseMsg.innerHTML = `<div class="alert alert-success">${json.message}</div>`;
          form.reset();
        }

        else {
          responseMsg.innerHTML = `<div class="alert alert-danger">Error Data Cant Stored</div>`;
        }
      }
      catch (error) {
        console.error(error);
      }
    });

  </script>
<%- include('Partials/footer') %>