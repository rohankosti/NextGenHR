<%- include('Partials/header'); %>
<!-- Hero Area -->
    <section class="hero" id="hero">
        <div class="container">
            <h1 class="display-4">Join Our Team at NextGen HR</h1>
            <p class="lead">Empowering people, powering business. Discover your next career move with us!</p>
            <a href="#apply" class="btn btn-light btn-lg mt-3">Apply Now</a>
        </div>
    </section>

    <!-- Services Section -->
    <section id="services" class="py-5">
        <div class="container">
            <h2 class="section-title text-center">Our Services</h2>
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body text-center">
                            <i class="bi bi-people display-5 mb-3"></i>
                            <h5 class="card-title">HR Management</h5>
                            <p class="card-text">Streamlined HR processes for modern businesses, from onboarding to
                                payroll.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body text-center">
                            <i class="bi bi-bar-chart-line display-5 mb-3"></i>
                            <h5 class="card-title">Performance Analytics</h5>
                            <p class="card-text">Data-driven insights to help you grow your career and your company.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body text-center">
                            <i class="bi bi-award display-5 mb-3"></i>
                            <h5 class="card-title">Employee Engagement</h5>
                            <p class="card-text">Fostering a culture of collaboration, recognition, and growth.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- About Section -->
    <section id="about" class="py-5 bg-light">
        <div class="container">
            <h2 class="section-title text-center">About Us</h2>
            <div class="row align-items-center">
                <div class="col-md-6">
                    <img src="https://images.unsplash.com/photo-1506744038136-46273834b3fb?auto=format&fit=crop&w=600&q=80"
                        class="img-fluid rounded" alt="About NextGen HR">
                </div>
                <div class="col-md-6">
                    <p>NextGen HR is dedicated to transforming the workplace experience. With innovative HR solutions,
                        we help organizations and employees thrive in a rapidly changing world. Our team is passionate
                        about people, technology, and making a difference.</p>
                    <ul>
                        <li>Modern HR software</li>
                        <li>Expert support</li>
                        <li>Employee-first culture</li>
                    </ul>
                </div>
            </div>
        </div>
    </section>

    <!-- Blog Section -->
    <section id="blog" class="py-5">
        <div class="container">
            <h2 class="section-title text-center">Latest Blog Posts</h2>
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="card h-100">
                        <img src="https://images.unsplash.com/photo-1515378791036-0648a3ef77b2?auto=format&fit=crop&w=400&q=80"
                            class="card-img-top" alt="Blog 1">
                        <div class="card-body">
                            <h5 class="card-title">5 HR Trends in 2025</h5>
                            <p class="card-text">Stay ahead with the latest trends shaping the future of human
                                resources.</p>
                            <a href="#" class="btn btn-outline-primary btn-sm">Read More</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card h-100">
                        <img src="https://images.unsplash.com/photo-1461749280684-dccba630e2f6?auto=format&fit=crop&w=400&q=80"
                            class="card-img-top" alt="Blog 2">
                        <div class="card-body">
                            <h5 class="card-title">Building a Winning Team</h5>
                            <p class="card-text">Discover strategies to attract, retain, and develop top talent in your
                                organization.</p>
                            <a href="#" class="btn btn-outline-primary btn-sm">Read More</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card h-100">
                        <img src="https://images.unsplash.com/photo-1504384308090-c894fdcc538d?auto=format&fit=crop&w=400&q=80"
                            class="card-img-top" alt="Blog 3">
                        <div class="card-body">
                            <h5 class="card-title">Remote Work Best Practices</h5>
                            <p class="card-text">Tips and tools for effective remote work and virtual collaboration.</p>
                            <a href="#" class="btn btn-outline-primary btn-sm">Read More</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Contact Us Section -->
    <section id="contact" class="py-5 bg-light">
        <div class="container">
            <h2 class="section-title text-center">Contact Us</h2>
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <form>
                        <div class="mb-3">
                            <label for="contactName" class="form-label">Name</label>
                            <input type="text" class="form-control" id="contactName" required>
                        </div>
                        <div class="mb-3">
                            <label for="contactEmail" class="form-label">Email</label>
                            <input type="email" class="form-control" id="contactEmail" required>
                        </div>
                        <div class="mb-3">
                            <label for="contactMessage" class="form-label">Message</label>
                            <textarea class="form-control" id="contactMessage" rows="4" required></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">Send Message</button>
                    </form>
                </div>
            </div>
        </div>
    </section>
<%- include('Partials/footer'); %>