<style>
  /* ===== STAT CARD STYLING ===== */
  .stat-icon i {
    font-size: 40px;
    color: white;
    margin-bottom: 12px;
    display: inline-block;
    padding: 12px;
    background: rgba(255, 255, 255, 0.2);
    border-radius: 10px;
  }

  .bg-box-1 {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  }

  .bg-box-2 {
    background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  }

  .bg-box-3 {
    background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  }

  .bg-box-4 {
    background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);
  }

  .stat-card {
    transition: all 0.35s cubic-bezier(0.4, 0, 0.2, 1);
    border: none;
    cursor: pointer;
    position: relative;
    overflow: hidden;
    border-radius: 16px;
  }

  .stat-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: rgba(255, 255, 255, 0.1);
    transition: left 0.4s ease;
  }

  .stat-card:hover::before {
    left: 100%;
  }

  .stat-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.25);
  }

  .stat-card h6 {
    font-size: 14px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
    opacity: 0.9;
    margin-bottom: 8px;
  }

  .stat-card h3 {
    font-size: 32px;
    font-weight: 700;
    color: white;
  }

  .stat-card p {
    font-size: 12px;
    opacity: 0.8;
    margin: 0;
  }

  /* ===== OVERVIEW CARD ===== */
  .overview-card {
    background: rgba(255, 255, 255, 0.95);
    border: none;
    border-radius: 16px;
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.08);
    transition: all 0.3s ease;
    padding: 2rem;
  }

  .overview-card:hover {
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12);
    transform: translateY(-2px);
  }

  .overview-card h5 {
    color: #2c3e50;
    font-weight: 700;
    margin-bottom: 1rem;
    display: flex;
    align-items: center;
    gap: 10px;
  }

  .overview-card h5::before {
    content: '';
    width: 4px;
    height: 24px;
    background: linear-gradient(180deg, #0d6efd 0%, #0b5ed7 100%);
    border-radius: 2px;
  }

  /* ===== REMINDER CARD ===== */
  .reminder-card {
    background: rgba(255, 255, 255, 0.95);
    border: none;
    border-radius: 16px;
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.08);
    padding: 2rem;
    transition: all 0.3s ease;
  }

  .reminder-card:hover {
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12);
  }

  .reminder-card h6 {
    color: #2c3e50;
    font-weight: 700;
    margin-bottom: 1rem;
    display: flex;
    align-items: center;
    gap: 10px;
  }

  .reminder-card h6::before {
    content: '';
    width: 4px;
    height: 20px;
    background: linear-gradient(180deg, #ffc107 0%, #fd7e14 100%);
    border-radius: 2px;
  }

  .list-group {
    gap: 0.5rem;
  }

  .list-group-item {
    border: none;
    background: transparent;
    padding: 0.75rem 0;
    border-bottom: 1px solid rgba(0, 0, 0, 0.05);
    color: #2c3e50;
    font-size: 14px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    transition: all 0.3s ease;
  }

  .list-group-item:last-child {
    border-bottom: none;
  }

  .list-group-item:hover {
    padding-left: 6px;
    color: #0d6efd;
  }

  /* ===== FADE ANIMATIONS ===== */
  .fade-in {
    animation: fadeIn 0.5s ease-in-out;
  }

  .fade-up {
    animation: fadeUp 0.5s ease-in-out 0.2s both;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  @keyframes fadeUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* ===== RESPONSIVE ===== */
  @media (max-width: 768px) {
    .stat-card h3 {
      font-size: 24px;
    }

    .overview-card,
    .reminder-card {
      padding: 1.5rem;
    }
  }
</style>

